<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainMyAppsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/EmptyViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textViewAllApps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="25dp"
                android:src="@drawable/ic_view_all"
                android:textColor="#fff"
                android:contentDescription="@string/all" />

            <GridLayout
                android:id="@+id/gridTitlesMyApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="10"
                android:layout_weight="1"
                android:padding="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

            </GridLayout>
            <ImageView
                android:id="@+id/textViewAddTab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/ic_add"
                android:textColor="#fff"
                android:contentDescription="@string/add" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <GridLayout
                android:id="@+id/gridMyApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:paddingBottom="50dp"
                android:padding="5dp" />

        </ScrollView>

    </LinearLayout>

    <GridLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/configLayout"
            android:visibility="invisible"
            android:layout_columnWeight="1">

            <ImageView
                android:id="@+id/buttonLauncherConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_settings"
                android:textColor="#fff"
                android:contentDescription="@string/add" />

            <ImageView
                android:id="@+id/buttonLauncherEditApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_playlist"
                android:layout_weight="1"
                android:textColor="#fff"
                android:contentDescription="@string/add" />

            <ImageView
                android:id="@+id/buttonLauncherDisableAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_flash_off"
                android:layout_weight="1"
                android:textColor="#fff"
                android:contentDescription="@string/add" />

            <ImageView
                android:id="@+id/buttonLauncherEnableAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_flash_on"
                android:layout_weight="1"
                android:textColor="#fff"
                android:contentDescription="@string/add" />

        </LinearLayout>

        <ImageView
            android:id="@+id/buttonLauncherMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:layout_gravity="end|bottom"
            android:paddingEnd="15dp"
            android:src="@drawable/ic_arrow_left"
            android:textColor="#fff"
            android:contentDescription="@string/add" />

    </GridLayout>

</LinearLayout>